{
  "definitions": [
    {
      "title": "Adaptive Form",
      "id": "form",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "fd/franklin/components/form/v1/form",
            "template": {
              "fieldType": "form",
              "fd:version": "2.1"
            }
          }
        }
      }
    },
    {
      "...": "./models/form-components/_*.json#/definitions"
    },
    { 
      "...": "./components/accordion/_accordion.json#/definitions" 
    },
    { 
      "...": "./components/modal/_modal.json#/definitions" 
    },
    { 
      "...": "./components/password/_password.json#/definitions" 
    },
    { 
      "...": "./components/rating/_rating.json#/definitions" 
    },
    { 
      "...": "./components/tnc/_tnc.json#/definitions" 
    },
    { 
      "...": "./components/wizard/_wizard.json#/definitions" 
    }
  ],
  "models": [
    {
      "id": "form",
      "fields": [
          {
              "component": "select",
              "name": "thankYouOption",
              "label": "On Submit",
              "valueType": "string",
              "options": [
                  {
                      "name": "Show message",
                      "value": "message"
                  }
              ]
          },
          {
              "component": "richtext",
              "name": "thankYouMessage",
              "label": "Message Content",
              "valueType": "string",
              "condition": { "==": [{ "var": "thankYouOption" }, "message"] }
          },
          {
              "component": "select",
              "valueType": "string",
              "name": "actionType",
              "label": "Submit Action",
              "options": [
                  {
                      "name": "Submit to REST endpoint",
                      "value": "fd/af/components/guidesubmittype/restendpoint"
                  },
                  {
                      "name": "Send email",
                      "value": "fd/af/components/guidesubmittype/email"
                  },
                  {
                      "name": "Persist to Spreadsheet",
                      "value": "spreadsheet"
                  }
              ],
              "value" : ""
          },
          {
              "component": "boolean",
              "name": "enableRestEndpointPost",
              "label": "Enable POST request",
              "valueType": "string",
              "condition": { "==": [{ "var": "actionType" }, "fd/af/components/guidesubmittype/restendpoint"] }
          },
          {
              "component": "text",
              "name": "restEndpointPostUrl",
              "label": "URL For POST request",
              "valueType": "string",
              "condition": { "==": [{ "var": "actionType" }, "fd/af/components/guidesubmittype/restendpoint"] }
          },
          {
              "condition": { "==": [{ "var": "actionType" }, "spreadsheet"] },
              "component": "text",
              "name": "spreadsheetUrl",
              "label": "Spreadsheet Url",
              "valueType": "string"
          },
          {
              "component": "container",
              "name": "email",
              "label": "Email Configuration",
              "collapsible": false,
              "condition": { "==": [{ "var": "actionType" }, "fd/af/components/guidesubmittype/email"] },
              "fields": [
                  {
                      "component": "text",
                      "name": "from",
                      "label": "From",
                      "valueType": "string"
                  },
                  {
                      "component": "text",
                      "name": "mailto",
                      "label": "To",
                      "valueType": "string",
                      "multi": true,
                      "required": true
                  },
                  {
                      "component": "text",
                      "name": "cc",
                      "label": "CC",
                      "valueType": "string",
                      "multi": true
                  },
                  {
                      "component": "text",
                      "name": "bcc",
                      "label": "BCC",
                      "valueType": "string",
                      "multi": true
                  },
                  {
                      "component": "text",
                      "name": "subject",
                      "label": "Subject",
                      "valueType": "string"
                  },
                  {
                      "component": "boolean",
                      "name": "useExternalEmailTemplate",
                      "label": "Use external template",
                      "valueType": "boolean"
                  },
                  {
                    "component": "boolean",
                    "name": "useHtmlTemplate",
                    "label": "Use html template",
                    "valueType": "boolean"
                  },
                  {
                      "component": "aem-content",
                      "name": "templatePath",
                      "label": "External template path",
                      "valueType": "string",
                      "condition": { "==": [{ "var": "useExternalEmailTemplate" }, true] }
                  },
                  {
                      "component": "richtext",
                      "name": "template",
                      "label": "Email template",
                      "valueType": "string",
                      "condition": { "!=": [{ "var": "useExternalEmailTemplate" }, true] }
                  },
                  {
                      "component": "boolean",
                      "name": "includeAttachments",
                      "label": "Include attachments",
                      "valueType": "boolean"
                  }
              ]
          }
      ]
    },
    {
      "...": "./models/form-components/_*.json#/models"
    },
    {
      "...": "./components/*/_*.json#/models"
    }
  ],
  "filters": [
    {
      "id": "form",
      "components": [
        "captcha",
        "checkbox",
        "checkbox-group",
        "date-input",
        "drop-down",
        "email",
        "file-input",
        "form-accordion",
        "form-button",
        "form-fragment",
        "form-image",
        "form-modal",
        "form-reset-button",
        "form-submit-button",
        "number-input",
        "panel",
        "password",
        "plain-text",
        "radio-group",
        "rating",
        "telephone-input",
        "text-input",
        "tnc",
        "wizard",
        "range"
      ]
    }
  ]
}
